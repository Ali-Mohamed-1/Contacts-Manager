@model PersonResponse
@{
    ViewBag.Title = "Delete Person";
}

<h2>Delete Person</h2>
<h3>Are you sure to delete this person?</h3>

<div class="w-50">
    <form asp-controller="Persons" asp-action="Delete" method="post">

		<input type="hidden" asp-for="PersonID" />

        @* PersonName *@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Name" class="form-label pt"></label>
            </div>
            <div class="flex-1">
                <input asp-for="Name" class="form-input" disabled/>
                <span asp-validation-for="Name" class="text-red"></span>
            </div>
        </div>

        @* Submit *@
        <div class="form-field flex">
            <div class="w-25"></div>
            <div class="flex-1">
                <button class="button button-red-back">Delete</button>
            </div>
        </div>

    </form>
</div>